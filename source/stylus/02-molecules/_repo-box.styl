.repo-box
  position relative
  padding-top 20px
  margin 0 0 50px
  &:before 
    content ''
    position absolute
    top 0
    left 0
    width 100%
    height 5px
    background -moz-linear-gradient(left,  rgba(168,31,213,.7) 0%, rgba(168,31,213,0) 100%)
    background -webkit-linear-gradient(left,  rgba(168,31,213,.7) 0%,rgba(168,31,213,0) 100%)
    background linear-gradient(to right,  rgba(168,31,213,.7) 0%,rgba(168,31,213,0) 100%)
  
  > .labels
    flexbox flex
    align-items start
  > .labels > .label-item
    margin-right 20px
    @media ( max-width 770px )
      display none
      &.-owner 
        display block
  > .labels > .label-item > .photo
    width 15px
    height 15px
    margin-right 5px
    rounded 50%
  
  > .title 
    font-size 3.5rem
    font-weight 700
    margin 10px 0
    @media ( max-width 770px )
      font-size 2.5rem
  > .title > a 
    color white
    transition .3s
  > .title > a:hover 
    text-decoration underline
  
  > .link-text
    font-weight 300
    font-size 1.4rem
    font-style italic

.repo-box.-header
  &:before 
    display none